<!doctpe html>
<html lang="jp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        {% stylesheets
        '@Shu1SimulistBundle/Resources/public/css/*.min.css' filter='cssrewrite' output='css/bootstrap.min.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" />
        {% endstylesheets %}
    {% endblock %}
    {% block header_javascripts %}
    {% endblock %}
    <link href="{{ asset('favicon.ico') }}" rel="icon" type="image/x-icon" />
    <title>{% block title %}{% endblock %} - SimuList</title>
</head>
<body>
<div>
    {% block navbar %}
        <nav class="navbar navbar-default" role="navigation"><!-- NavBar start -->
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#head-navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">SimuList</a>
                </div>
                    <div class="collapse navbar-collapse" id="head-navbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="">設定</a></li>
                            <li><a href="">ログアウト</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav><!-- NavBar end -->
    {% endblock %}
</div>
<div class="container">
    {% block body %}
    {% endblock %}
</div>
{% block footer_javascripts %}
    {% javascripts
    '@Shu1SimulistBundle/Resources/public/js/jquery/1.11.1/jquery.min.js'
    '@Shu1SimulistBundle/Resources/public/js/bootstrap.min.js'
    output='js/compiled/main.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
